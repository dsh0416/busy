<%= form_for(@calendar) do |f| %>
  <div class="form-group">
    <%= f.text_field :url, autofocus: true, class: "form-control", placeholder: 'iCalendar URL (.ics)' %>
  </div>
  <div class="form-group">
    <%= f.text_field :display_as, class: "form-control", placeholder: 'Calendar Display Name' %>
  </div>
  <div class="form-group">
    <%= f.color_field :color, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.select :status, options_for_select([['Auto Update', 'enabled'], ['Manual Update', 'paused'], ['Exclude from Results', 'excluded']], @calendar.status ), {}, { class: "form-control" } %>
  </div>
  <button class="btn btn-lg btn-block btn-primary" role="button" type="submit">
    Submit
  </button>
<% end %>